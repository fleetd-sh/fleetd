# Fleetd Environment Configuration
# Copy this file to .env and configure for your environment

# Database Configuration
DB_USER=fleetd
DB_PASSWORD=change_me_to_secure_password_min_32_chars
DB_NAME=fleetd
DB_PORT=5432
DB_REPLICATION_USER=replicator
DB_REPLICATION_PASSWORD=change_me_to_secure_replication_password

# Security Configuration
JWT_SECRET=change_me_to_secure_random_string_at_least_64_chars_long
VALKEY_PASSWORD=change_me_to_secure_redis_password

# API Configuration
DEVICE_API_PORT=8080
PLATFORM_API_PORT=8090
PUBLIC_API_URL=https://api.fleetd.example.com
PUBLIC_DEVICE_API_URL=https://device.fleetd.example.com

# Service Replicas (for production)
DEVICE_API_REPLICAS=2
PLATFORM_API_REPLICAS=2
WEB_REPLICAS=2

# Monitoring Configuration
METRICS_PORT=8428
METRICS_RETENTION=90d
LOKI_PORT=3100

# Cache Configuration
VALKEY_PORT=6379

# TLS Configuration
TLS_ENABLED=true
TLS_CERT_FILE=/certs/server.crt
TLS_KEY_FILE=/certs/server.key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# Logging
LOG_LEVEL=info

# Web Configuration
HTTP_PORT=80
HTTPS_PORT=443

# Container Registry (optional)
REGISTRY=ghcr.io
VERSION=latest

# Development Mode (NEVER set to true in production)
DEVELOPMENT_MODE=false
INSECURE_MODE=false